<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro" />


    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <link name="base_link">

    </link>

    <!--Chassis-->

    <joint name= "chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>

    <joint name= "base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0"/>
    </joint>

    <!--z=0.06-->
    <link name="chassis">
        <visual>
            <origin xyz="0.055 0 0.175"/>
            <geometry>
                <box size="0.11 0.11 0.35"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0.055 0 0.175"/>
            <geometry>
                <box size="0.11 0.11 0.35"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.11" y="0.11" z="0.35">
            <origin xyz="0.055 0 0.175" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Orange</material>
    </gazebo>
    <!--bloc aruco-->

    <joint name= "bloc_aruco_joint" type="fixed">
        <parent link="chassis"/>
        <child link="bloc_aruco"/>
        <origin xyz="0.055 0 0"/>
    </joint>

    <link name="bloc_aruco">
        <visual>
            <origin xyz="0 0 0.47"/>
            <geometry>
                <box size="0.11 0.11 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0.47"/>
            <geometry>
                <box size="0.11 0.11 0.001"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.11" y="0.11" z="0.001">
            <origin xyz="0 0 0.47" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="bloc_aruco" link="">
        <visual>
        <material>
            <script>
                <uri>$(find ezbot_robot)/media/materials/scripts</uri>
                <uri>$(find ezbot_robot)/media/materials/textures</uri>
                <name>arucoMat</name>
            </script>
        </material>
        </visual>
    </gazebo>
    <!--bloc avant-->

    <joint name= "bloc_avant_joint" type="fixed">
        <parent link="chassis"/>
        <child link="bloc_avant"/>
        <origin xyz="0.11 0 0"/>
    </joint>

    <link name="bloc_avant">
        <visual>
            <origin xyz="0.04 0 0.03"/>
            <geometry>
                <box size="0.08 0.08 0.06"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.04 0 0.03"/>
            <geometry>
                <box size="0.08 0.08 0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.08" y="0.08" z="0.06">
            <origin xyz="0.04 0 0.03" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="bloc_avant">
        <material>Gazebo/White</material>
    </gazebo>

    <!--bloc arriere-->

    <joint name= "bloc_arriere_joint" type="fixed">
        <parent link="chassis"/>
        <child link="bloc_arriere"/>
        <origin xyz="-0.08 0 0"/>
    </joint>

    <link name="bloc_arriere">
        <visual>
            <origin xyz="0.04 0 0.03"/>
            <geometry>
                <box size="0.08 0.08 0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.04 0 0.03"/>
            <geometry>
                <box size="0.08 0.08 0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.05" x="0.08" y="0.08" z="0.06">
            <origin xyz="0.04 0 0.03" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="bloc_arriere">
        <material>Gazebo/Black</material>
    </gazebo>

    <!--bloc gauche-->

    <joint name= "bloc_gauche_joint" type="fixed">
        <parent link="chassis"/>
        <child link="bloc_gauche"/>
        <origin xyz="0.015 0.095 0"/>
    </joint>

    <link name="bloc_gauche">
        <visual>
            <origin xyz="0.04 0 0.03"/>
            <geometry>
                <box size="0.08 0.08 0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.04 0 0.03"/>
            <geometry>
                <box size="0.08 0.08 0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.08" y="0.08" z="0.06">
            <origin xyz="0.04 0 0.03" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="bloc_gauche">
        <material>Gazebo/Black</material>
    </gazebo>

    <!--bloc droit-->

    <joint name= "bloc_droit_joint" type="fixed">
        <parent link="chassis"/>
        <child link="bloc_droit"/>
        <origin xyz="0.015 -0.095 0"/>
    </joint>

    <link name="bloc_droit">
        <visual>
            <origin xyz="0.04 0 0.03"/>
            <geometry>
                <box size="0.08 0.08 0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.04 0 0.03"/>
            <geometry>
                <box size="0.08 0.08 0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.08" y="0.08" z="0.06">
            <origin xyz="0.04 0 0.03" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="bloc_droit">
        <material>Gazebo/Black</material>
    </gazebo>

    <!--roue droite-->

    <joint name= "roue_droite_joint" type="continuous">
        <parent link="bloc_droit"/>
        <child link="roue_droite"/>
        <origin xyz="0.04 -0.05 0.02" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>


    <link name='roue_droite'>
        <visual>
            <material name="blue"/>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03" length="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="roue_droite">
        <material>Gazebo/Blue</material>
        <fdir1>1 0 0</fdir1>
        <mu1>0.9</mu1>
        <mu2>0.1</mu2>
        <collision>
            <surface>
                <contact>
                <ode>
                    <max_vel>0</max_vel>
                    <min_depth>0.02</min_depth>
                </ode>
                </contact>
            </surface>
        </collision>
    </gazebo>

    <!--roue gauche-->

    <joint name= "roue_gauche_joint" type="continuous">
        <parent link="bloc_gauche"/>
        <child link="roue_gauche"/>
        <origin xyz="0.04 0.05 0.02" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>


    <link name='roue_gauche'>
        <visual>
            <material name="blue"/>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03" length="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="roue_gauche">
        <material>Gazebo/Blue</material>
        <fdir1>1 0 0</fdir1>
        <mu1>0.9</mu1>
        <mu2>0.1</mu2>
        <collision>
            <surface>
                <contact>
                <ode>
                    <max_vel>0</max_vel>

                    <min_depth>0.02</min_depth>
                </ode>
                </contact>
            </surface>
        </collision>
    </gazebo>

    <!--roue avant-->

    <joint name= "roue_avant_joint" type="continuous">
        <parent link="bloc_avant"/>
        <child link="roue_avant"/>
        <origin xyz="0.09 0 0.02" rpy="0 ${pi/2} 0"/>
        <axis xyz="0 0 1"/>
    </joint>


    <link name='roue_avant'>
        <visual>
            <material name="blue"/>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03" length="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="roue_avant">
        <material>Gazebo/Blue</material>
        <fdir1>1 0 0</fdir1>
        <mu1>0.9</mu1>
        <mu2>0.1</mu2>
        <collision>
            <surface>
                <contact>
                <ode>
                    <max_vel>0</max_vel>
                    <min_depth>0.02</min_depth>
                </ode>
                </contact>
            </surface>
        </collision>
    </gazebo>

    <!--roue arriere-->

    <joint name= "roue_arriere_joint" type="continuous">
        <parent link="bloc_arriere"/>
        <child link="roue_arriere"/>
        <origin xyz="-0.01 0 0.02" rpy="0 ${pi/2} 0"/>
        <axis xyz="0 0 1"/>
    </joint>


    <link name='roue_arriere'>
        <visual>
            <material name="blue"/>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.03" length="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="roue_arriere">
        <material>Gazebo/Blue</material>
        <fdir1>1 0 0</fdir1>
        <mu1>0.9</mu1>
        <mu2>0.1</mu2>
        <collision>
            <surface>
                <contact>
                <ode>
                    <max_vel>0</max_vel>
                    <min_depth>0.02</min_depth>
                </ode>
                </contact>
            </surface>
        </collision>
    </gazebo>

    <link name="renverseur_de_panneaux">
        <visual>
            <origin xyz="0.055 0.11 0.10"/>
            <geometry>
                <box size="0.05 0.20 0.05"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0.055 0.11 0.10"/>
            <geometry>
                <box size="0.05 0.20 0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.05" y="0.15" z="0.05">
            <origin xyz="0.055 0 0.10" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name= "renverseur_de_panneaux_joint" type="fixed">
        <parent link="chassis"/>
        <child link="renverseur_de_panneaux"/>
    </joint>
    
    <gazebo reference="renverseur_de_panneaux">
        <material>Gazebo/Purple</material>
    </gazebo>

</robot>
